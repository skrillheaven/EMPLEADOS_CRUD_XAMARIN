<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Eliminar Empleado"
             x:Class="CRUD_Final.Views.DeleteCompanyPage">
    <ContentPage.Content>
        <StackLayout>
            <ListView x:Name="LV_lista2">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <Grid>

                                <Label Text="{Binding Name}"/>
                                <Label Grid.Column ="1"
                                    Text="{Binding Address}"/>


                            </Grid>
                        </ViewCell>
                    </DataTemplate>

                </ListView.ItemTemplate>
            </ListView>
            
            <Button x:Name="btn_Eliminar"
                    Text="Eliminar"
                    Clicked="btn_Eliminar_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>